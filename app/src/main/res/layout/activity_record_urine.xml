<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleBar"
        style="@style/titleBar"
        android:text="@string/urineTitle" />

    <LinearLayout
        style="@style/linearView"
        android:gravity="center_vertical">

        <Button
            style="@style/btnNav"
            android:id="@+id/askWeight"
            android:layout_width="0px"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="@string/weightBtn" />

        <EditText
            android:id="@+id/weightPrint"
            android:layout_width="0px"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:hint="@string/urineHint"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_margin="20dp"
            android:inputType="numberDecimal"
            android:gravity="end" />

        <TextView
            android:id="@+id/urineUnit"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/urineUnit"
            android:textSize="40sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnPrev"
        style="@style/btnPrev"
        android:text="@string/prev" />

    <Button
        android:id="@+id/btnNext"
        style="@style/btnNext"
        android:text="@string/next" />

</RelativeLayout>