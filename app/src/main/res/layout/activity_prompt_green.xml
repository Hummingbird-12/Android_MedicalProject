<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleBar"
        style="@style/titleBar"
        android:text="@string/greenTitle" />

    <LinearLayout
        style="@style/linearView">

        <ImageView
            android:id="@+id/greenEx1"
            style="@style/imgLeft"
            android:src="@drawable/container_green"
            android:contentDescription="@string/containerGreenDescription"/>

        <ImageView
            android:id="@+id/greenEx2"
            style="@style/imgCenter"
            android:src="@drawable/container_green"
            android:contentDescription="@string/containerGreenDescription" />

        <ImageView
            android:id="@+id/greenEx3"
            style="@style/imgRight"
            android:src="@drawable/container_green"
            android:contentDescription="@string/containerGreenDescription"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnPrev"
        style="@style/btnPrev"
        android:text="@string/prev" />

    <Button
        android:id="@+id/btnNext"
        style="@style/btnNext"
        android:text="@string/next" />

</RelativeLayout>